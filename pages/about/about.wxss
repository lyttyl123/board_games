.container {
  padding: 40rpx;
  min-height: 100vh;
  background-color: #f8f9fa;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 20rpx;
  border-radius: 30rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #2c3e50;
}

.content {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.section {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  border-left: 4rpx solid #3498db;
}

.section-title {
  font-size: 32rpx;
  color: #2c3e50;
  margin-bottom: 20rpx;
  display: block;
  font-weight: 500;
}

.section-content {
  font-size: 28rpx;
  color: #7f8c8d;
  line-height: 1.8;
  display: block;
  margin-bottom: 10rpx;
}

.contact-item {
  font-size: 28rpx;
  color: #7f8c8d;
  line-height: 1.8;
  display: block;
  margin-top: 10rpx;
  padding-left: 20rpx;
  position: relative;
}

.contact-item::before {
  content: "â€¢";
  position: absolute;
  left: 0;
  color: #3498db;
}

.navigation {
  margin-top: 40rpx;
}

.nav-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #3498db;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(52, 152, 219, 0.2);
  transition: all 0.3s ease;
}

.nav-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(52, 152, 219, 0.2);
} 